<% layout('layouts/boilerplate') %>
<h1>All Campgrounds</h1>
<div>
  <a href="/campgrounds/new">New</a>
</div>

<% for(let campground of campgrounds){ %>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-4">
      <% if(campground.images.length) { %>
      <img src="<%=campground.images[0].url%>" alt="" class="img-fluid" />
      <% } else { %>
      <img
        src="https://res.cloudinary.com/dg0it3ba2/image/upload/v1629896213/YelpCamp/thpyejss0xcit5mlpvkm.jpg"
        alt=""
        class="img-fluid"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h4 class="card-title"><%=campground.title%></h4>
        <p class="card-text"><%=campground.description%></p>
        <p class="card-text">
          <small class="text-muted"><%=campground.location%></small>
        </p>
        <a href="/campgrounds/<%=campground._id%>" class="btn-primary btn"
          >View <%=campground.title%></a
        >
      </div>
    </div>
  </div>
</div>
<% } %>
